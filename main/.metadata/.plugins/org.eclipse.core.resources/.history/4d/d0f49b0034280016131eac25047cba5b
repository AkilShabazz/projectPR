from Maxwell_ForceLength import Maxwell_ForceLength
from Voigt_ForceLength import Voigt_ForceLength
import numpy as np
import matplotlib.pyplot as plt
import sys

if __name__ == '__main__':
    
    print sys.version
    #
    timeStep = 0.01
    Tf = 10
    
    #    
    b = 2.5
    k = 0.4
    
    #
    stepStartTime = 1
    stepFinalTime = 7
    t = np.arange(0, Tf, timeStep)
    force = 0.5 * (np.sign(t-stepStartTime) + 1) - 0.5 * (np.sign(t-stepFinalTime) + 1)
    
    
    # Maxwell Model   
    maxwellModel = Maxwell_ForceLength(b, k, force, timeStep)
    
    for i in xrange(1, len(t)-1):
        maxwellModel.computeLength(t[i])
    
    
    #
    
    
    
    plt.figure()
    plt.plot(t, maxwellModel.length,'-')
    
    
    plt.show()
    
    # Voigt Model   
    voigtModel = Voigt_ForceLength(b, k, force, timeStep)
    
    for i in xrange(1, len(t)-1):
        voigtModel.computeLength(t[i])
    
    
    #
    
    
    plt.figure()
    plt.plot(t, voigtModel.length,'-')
    
    
   
        
    